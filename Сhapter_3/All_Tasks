    cout << "Проверка:\n";
    cout << "  Число x = " << a << b << c << endl;
    cout << "  Зачеркиваем вторую цифру: остается " << (10 * a + c) << endl;
    cout << "  Приписываем справа вторую цифру " << b << ": получаем " << n << endl;

    return 0;
}
